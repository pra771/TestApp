<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_shade"
    tools:context=".AdopeScreen">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_sidearrow1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/sidearrow"
         />

    <ImageView
        android:id="@+id/img_slideimagedog"
        android:layout_width="188dp"
        android:layout_height="205dp"
        android:layout_marginTop="90dp"
        android:src="@mipmap/dogslideview2"
        />

            <TextView
                android:id="@+id/tv_namemaddy"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:layout_marginStart="198dp"
                android:layout_marginTop="170dp"
                android:text="Maddy"
                android:textColor="@color/black"
                android:textSize="29dp" />

            <TextView
        android:id="@+id/tv_gender"
        android:layout_width="111dp"
        android:layout_height="23dp"
        android:layout_marginTop="210dp"
        android:layout_marginStart="198dp"
        android:text="Gender:male"
        android:textSize="16dp"
        android:textColor="@color/black"
       />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/constraintLayout3"
            android:layout_marginStart="18dp"
            android:layout_width="366dp"
            android:layout_height="123dp"
            android:background="@drawable/constrr"
       >

        <TextView
            android:id="@+id/tv_thank"
            android:layout_width="243dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:text="Thank You For Adopting Me."
            android:layout_marginStart="53dp"
            android:textColor="@color/black"
            android:textSize="19dp"
            />

        <TextView
            android:id="@+id/tv_findme"
            android:layout_width="139dp"
            android:layout_height="30dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="50dp"
            android:text="Find Me Here"
            android:textColor="@color/black"
            android:textSize="22dp"
            />

        <ImageView
            android:id="@+id/img_locationfindme"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="45dp"
            android:src="@mipmap/locationsymbol"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_aboutme"
        android:layout_width="88dp"
        android:layout_height="25dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="About Me:"
        android:textColor="@color/black"
        android:textSize="19dp"
        />

    <TextView
        android:id="@+id/tv_matter"
        android:layout_width="362dp"
        android:layout_height="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:text="@string/about_us"
        android:textColor="@color/black"
        android:textSize="18.43dp"
       />
        <TextView
            android:id="@+id/tv_matter1"
            android:layout_width="362dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:text="@string/about_us"
            android:textColor="@color/black"
            android:textSize="18.43dp"
            />
    </LinearLayout>
</ScrollView>