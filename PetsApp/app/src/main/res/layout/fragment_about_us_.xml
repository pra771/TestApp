            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tV_aboutus5"
            android:layout_width="377dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="22dp"
